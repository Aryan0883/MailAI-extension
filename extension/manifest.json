

{
  "name": "Email Writer Assistant",
  "description": "AI-Powered Reply Generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://mailai-extension-3.onrender.com/*",
    "*://mail.google.com/*"
  ],
  "action": {
    "default_title": "Email Writer Assistant"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}